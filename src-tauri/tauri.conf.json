{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "handy",
  "version": "0.1.0",
  "identifier": "com.handy.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build-only",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "handy",
        "width": 1600,
        "height": 1000
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}